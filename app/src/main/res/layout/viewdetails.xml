<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/nbg"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="384dp"
        android:layout_height="511dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cimg"
                android:layout_width="275dp"
                android:layout_height="180dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/crname"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:text="  Crop Name"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/cname"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cpr"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="  Price"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/cprice"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="  Description"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp"
                    />

                <TextView
                    android:id="@+id/des1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:text=" " />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fname"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="  Farmer name"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/frname"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:text=" "
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phn"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="  Phone no"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/phno"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="  Location"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/location1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quant"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="  Quantity"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <EditText
                    android:id="@+id/quant1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:hint="In Quintal"
                    android:inputType="number"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="  Ratings"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:text=" "/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:textAlignment="center" />


                <TextView
                    android:id="@+id/addtocart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btnformate"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="@string/addcart"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Comments"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/cmnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Post your comment"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btnformate"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="@string/post"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="16dp" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/viewcmnt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textMultiLine" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>